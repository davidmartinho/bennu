<?xml version="1.0" encoding="ISO-8859-1"?>
<project basedir="." default="compile" name="The Lucene Plugin for Fenix Framework">
	
	<property name="src.dir" location="src" />
	<property name="build.dir" location="build" />
	<property name="dist.dir" location="dist" />
	<property name="lib.dir" location="lib" />
	<property name="conf.dir" location="conf"/>
	<property name="jar.filename" value="${dist.dir}/fenix-framework-search-plugin" />
	<property name="src.gen" location="src_gen" />

	<import file="${conf.dir}/dml-generate.xml" />

	<path id="class.path.ref">
		<fileset dir="${lib.dir}">
			<include name="*.jar" />
		</fileset>
		<fileset dir="${dist.dir}">
			<include name="*.jar" />
		</fileset>
	</path>

	<target name="clean-all" description="Removes any generated files">
		<delete dir="${build.dir}" />
		<delete dir="${dist.dir}" />
		<delete dir="${src.gen}" />
	</target>

	<target name="compile" depends="generate-domain" description="Compiles the plugin">
		<mkdir dir="${build.dir}" />
		<javac destdir="${build.dir}" extdirs="${lib.dir}" target="1.5" debug="on"> 
			<src path="${src.dir}" />
			<src path="${src.gen}" />
		</javac>
		<antcall target="post-compile"/>
	</target>

	<target name="post-compile" description="Bytecode Magic to inject constructors">
        <post-process-domain dml="${conf.dir}" dir="${build.dir}">
        	<classpath refid="class.path.ref" />
            <classpath>
              <pathelement path="${build.dir}" />
            </classpath>
         </post-process-domain>
	</target>
	
	<target name="jar" depends="generate-domain,compile" description="Generates the jar with the plugin">
		<jar destfile="${jar.filename}.jar" basedir="${build.dir}" />
	</target>

	<target name="prepare" description="Copies property files">
		<mkdir dir="${build.dir}" />
		<mkdir dir="${src.gen}" />
		<mkdir dir="${dist.dir}" />
	</target>

	<target name="generate-domain" depends="prepare">
		<copy file="${conf.dir}/luceneSearch-plugin.dml" todir="${build.dir}" />
		<dml-compile dml="${conf.dir}/lucene-externalEntity-import.dml" java-sources="${src.dir}" java-gen="${src.gen}">
			<arg value="${conf.dir}/luceneSearch-plugin.dml"/>
			<classpath refid="class.path.ref" />
		</dml-compile>
	</target>
</project>
